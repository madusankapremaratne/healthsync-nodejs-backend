# ============================================
# HealthSync Backend Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=HealthSync

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthsync_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key
JWT_REFRESH_EXPIRATION=7d

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@healthsync.com

# Third-Party API Integration
DOC990_API_KEY=your_doc990_api_key
DOC990_API_URL=https://api.doc990.com
ECHANNELLING_API_KEY=your_echannelling_api_key
ECHANNELLING_API_URL=https://api.echannelling.com

# OCR Service (Google Vision API)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# AWS S3 (Image Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=healthsync-uploads
AWS_REGION=us-east-1

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn

# Elasticsearch (Phase 2)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

# Feature Flags
ENABLE_2FA=true
ENABLE_TELEMEDICINE=false
ENABLE_PHARMACY_INTEGRATION=false

# HIPAA Compliance
ENABLE_AUDIT_LOG=true
ENABLE_ROW_LEVEL_SECURITY=true
DATA_RETENTION_DAYS=2555
